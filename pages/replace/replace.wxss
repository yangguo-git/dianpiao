  margin-left: -130rpx;
  position: relative;
}
.code_block{
  width: 92%;
  border-radius: 10rpx;
  margin-left: 4%;
  background: #F7F7F7;
  margin-top: 60rpx;
  padding-top: 10rpx;
  padding-bottom: 6rpx;
}
.code_txt{
  margin-top: 6rpx;
}
.flex_row{
  width: 84%;
  margin-left: 5%;
}
.bor_bottom{
  padding: 20rpx;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #f2f2f2;
}
