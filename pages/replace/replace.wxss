page{
  background: white;
  font-size: 32rpx;
}
.sweep_code_bg{
  padding: none;
  margin: none;
  line-height:1.5;
  background: none;
  text-align: left;
}

.copy-right {
  font-size: 26rpx;
  color: #459ad6;
  padding-top: 40rpx;
  top: 30rpx;
  position: relative;
  bottom: 0rpx;
  text-align: center;
  margin: 0 auto;
  width: 100%;
}
.sweep_code_bg::after {
  border: none;
}
.sweep_code_bg{
  width: 92%;
  margin-left: 4%;
