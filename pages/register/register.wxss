
page{
  font-size: 32rpx;
  background-color: #f4f5f8;
  padding-top: 20rpx;
  box-sizing: border-box;
}
.mini{
  width: 60rpx;
  height: 39rpx;
  margin: 20rpx 30rpx 0 20rpx;
}
.copy-right{
  font-size: 26rpx;
  color: #459ad6;
  padding-top: 40rpx;
  position: fixed;
  bottom: 0rpx;
  text-align: center;
  margin: 0 auto;
  width: 100%;
}
.download{
  width: 50rpx;
  height: 30rpx;
}
.register{
  margin-top: 80rpx;
  text-align: center;
  font-size: 46rpx;
  color: #a7a7a7;
  margin-bottom: 120rpx;
}
.right{
  width: 20rpx;
  height: 30rpx;
  margin-top: 10rpx;
  position: absolute;
  right: 50rpx;
}
.item{
  display: flex;
  flex-direction: row;
  width: 90%;
  margin-left: 5%;
  height: 70rpx;
  margin-bottom: 50rpx;
  border-bottom: 1px solid #f2f2f2;
}
.item .item_txt{
  width: 160rpx;
  line-height: 50rpx;
  font-size: 32rpx;
}
.item button{
  width: 530rpx;
  font-size: 32rpx;
  height: 84rpx;
  line-height: 90rpx;
  background: none;
  color: #00CB4F;
  position: absolute;
  z-index: 999;
  right: 30rpx;
  margin-top: -16rpx;
}
.item button::after {
  border: none;
}
input{
  width: 320rpx;
  margin-left: 30rpx;
}
.submit{
  width: 97%;
  color: #fff;
  background: #6271f5;
  font-size: 30rpx;
  height: 85rpx;
  line-height: 85rpx;
}
.coll{
  position: absolute;
  text-align: center;
  color: #00CB4F;
  bottom: 60rpx;
  width: 100%;
}

/* 弹窗 */
.bg {
  display: none;
  position: absolute;
  top: 0%;
  left: 0%;
  width: 100%;
  height: 100%;
  background-color: black;
  z-index: 1001;
  -moz-opacity: 0.3;
  opacity: 0.30;
  filter: alpha(opacity=30);
}
 
.show {
  padding-top: 20rpx;
  display: none;
  color: #00CB4F;
  text-align: center;
  position: absolute;
  top: 30%;
  left: 10%;
  width: 80%;
  border-radius: 10rpx;
  background-color: white;
  z-index: 1002;
}
.title{
  border-bottom: 1px solid #d0d0d0;
  padding-bottom: 20rpx;
  font-size: 36rpx;
  color: #6271f5;
}
.txt{
  width: 80%;
  text-align: left;
  margin-left: 10%;
  font-size: 32rpx;
  line-height: 70rpx;
  margin-top: 50rpx;
  
  margin-bottom:40rpx;
  color: #666
}
.coll_txt{
  color: #6271f5;
text-decoration:underline;
}
